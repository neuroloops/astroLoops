---
import * as section from '@/content/sections/skills.md'
import SkillCard from './SkillCard.astro'

const { list } = section.frontmatter

type TProps = {
	list: {
		name: string
		color: string
		items: string[]
		img: string
	}[]
}
---

<div class="grid flex flex-wrap justify-center gap-2xl pt-38 md:grid-cols-2">
	{
		list.map((props: TProps) => {
			return <SkillCard props={props} />
		})
	}
</div>
